    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:text="@string/register"
        android:width="200dp"

        style="@style/yo"

        />

    <Button
        android:id="@+id/login"
